<section class="fetchly-footer" aria-label="Footer">
  <div class="fetchly-footer__inner">
    <div class="fetchly-footer__top">
      <div class="fetchly-footer__logo">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 260 }}"
            alt="{{ shop.name | escape }}"
            loading="lazy"
          >
        {% endif %}
      </div>

      <div class="fetchly-footer__col">
        {% if section.settings.menu_1_title != blank %}
          <p class="fetchly-footer__heading">{{ section.settings.menu_1_title }}</p>
        {% endif %}
        {% if section.settings.menu_1 != blank %}
          <ul class="fetchly-footer__links">
            {% for link in linklists[section.settings.menu_1].links %}
              <li><a class="fetchly-footer__link" href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="fetchly-footer__col">
        {% if section.settings.menu_2_title != blank %}
          <p class="fetchly-footer__heading">{{ section.settings.menu_2_title }}</p>
        {% endif %}
        {% if section.settings.menu_2 != blank %}
          <ul class="fetchly-footer__links">
            {% for link in linklists[section.settings.menu_2].links %}
              <li><a class="fetchly-footer__link" href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="fetchly-footer__col">
        {% if section.settings.menu_3_title != blank %}
          <p class="fetchly-footer__heading">{{ section.settings.menu_3_title }}</p>
        {% endif %}
        {% if section.settings.menu_3 != blank %}
          <ul class="fetchly-footer__links">
            {% for link in linklists[section.settings.menu_3].links %}
              <li><a class="fetchly-footer__link" href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="fetchly-footer__subscribe">
        {% if section.settings.subscribe_title != blank %}
          <p class="fetchly-footer__heading">{{ section.settings.subscribe_title }}</p>
        {% endif %}
        {% if section.settings.subscribe_text != blank %}
          <p class="fetchly-footer__subtext">{{ section.settings.subscribe_text }}</p>
        {% endif %}

        {% form 'customer', class: 'fetchly-footer__form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="fetchly-footer__form-row">
            <input
              class="fetchly-footer__input"
              type="email"
              name="contact[email]"
              placeholder="{{ section.settings.email_placeholder | escape }}"
              autocorrect="off"
              autocapitalize="off"
              required
            >
            <button class="fetchly-footer__button" type="submit">{{ section.settings.button_text }}</button>
          </div>

          {% if section.settings.disclaimer != blank %}
            <p class="fetchly-footer__note">{{ section.settings.disclaimer }}</p>
          {% endif %}
        {% endform %}

        <div class="fetchly-footer__social">
          {% if section.settings.instagram_url != blank %}
            <a class="fetchly-footer__icon" href="{{ section.settings.instagram_url }}" aria-label="Instagram" target="_blank" rel="noopener">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Z" stroke="currentColor" stroke-width="1.6"/>
                <path d="M12 17a5 5 0 1 0 0-10 5 5 0 0 0 0 10Z" stroke="currentColor" stroke-width="1.6"/>
                <path d="M17.5 6.5h.01" stroke="currentColor" stroke-width="2.6" stroke-linecap="round"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.email_url != blank %}
            <a class="fetchly-footer__icon" href="{{ section.settings.email_url }}" aria-label="Email">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M4 6h16v12H4V6Z" stroke="currentColor" stroke-width="1.6"/>
                <path d="m4 7 8 6 8-6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="fetchly-footer__divider"></div>

    <div class="fetchly-footer__bottom">
      <p class="fetchly-footer__copyright">
        {{ section.settings.copyright_text }}
      </p>

      <div class="fetchly-footer__legal">
        {% if section.settings.legal_menu != blank %}
          {% for link in linklists[section.settings.legal_menu].links %}
            <a class="fetchly-footer__legal-link" href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
.fetchly-footer {
  background: #efe7e3;
  padding: 72px 0 42px;
  color: #391212;
}

.fetchly-footer__inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 34px;
}

.fetchly-footer__top {
  display: grid;
  grid-template-columns: 240px 1fr 1fr 1fr 420px;
}

.fetchly-footer__logo{
        display: flex;
      align-items: center;
}

.fetchly-footer__logo img {
  display: block;
  max-width: 140px;
  height: auto;
}

.fetchly-footer__heading {
  margin: 0 0 16px;
  font-size: 13px;
  font-weight: 600;
  letter-spacing: 0;
  text-transform: none;
}

.fetchly-footer__links {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 12px;
}

.fetchly-footer__link {
  font-size: 12px;
  color: #391212;
  text-decoration: none;
  opacity: .78;
}

.fetchly-footer__link:hover {
  opacity: 1;
  text-decoration: underline;
}

.fetchly-footer__subtext {
  margin: 0 0 14px;
  font-size: 12px;
  opacity: .78;
  max-width: 380px;
  line-height: 1.45;
}

.fetchly-footer__link[href*="beautiful-dress"] {
  color: #d60000;
  font-weight: 600;
}

.fetchly-footer__input {
  height: 38px;
  width:60%;
  border-radius: 8px;
  border: 1px solid rgba(57,18,18,.18);
  padding: 0 12px;
  background: rgba(255,255,255,.55);
  outline: none;
}

.fetchly-footer__button {
  height: 38px;
  border-radius: 999px;
  padding: 0 18px;
  border: 1px solid rgba(57,18,18,.55);
  background: transparent;
  color: #391212;
  cursor: pointer;
  font-size: 12px;
}

.fetchly-footer__note {
  margin: 10px 0 0;
  font-size: 10px;
  opacity: .7;
  line-height: 1.4;
  max-width: 420px;
}

.fetchly-footer__social {
  display: flex;
  gap: 12px;
  margin-top: 14px;
}

.fetchly-footer__icon {
  width: 22px;
  height: 22px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #391212;
  text-decoration: none;
  opacity: .85;
}

.fetchly-footer__icon:hover { opacity: 1; }

.fetchly-footer__divider {
  height: 1px;
  background: rgba(57,18,18,.25);
  margin: 52px 0 18px;
}

.fetchly-footer__bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 18px;
  font-size: 11px;
  opacity: .75;
}

.fetchly-footer__copyright {
  margin: 0;
}

.fetchly-footer__legal {
  display: flex;
  gap: 18px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.fetchly-footer__legal-link {
  color: #391212;
  text-decoration: none;
}

.fetchly-footer__legal-link:hover { text-decoration: underline; }

@media (max-width: 1000px) {
  .fetchly-footer__top {
    grid-template-columns: 180px 1fr 1fr;
  }
  .fetchly-footer__subscribe {
    grid-column: 1 / -1;
  }
}

@media (max-width: 768px) {
  .fetchly-footer__top {
    grid-template-columns: 1fr;
    gap: 34px;
  }

  .fetchly-footer__inner {
    padding: 0 22px;
  }

  .fetchly-footer__logo {
    justify-self: start;
    
  }

  .fetchly-footer__logo img {
    max-width: 120px;
    height: auto;

  }

  .fetchly-footer__heading,
  .fetchly-footer__subtext,
  .fetchly-footer__note,
  .fetchly-footer__link,
  .fetchly-footer__legal-link,
  .fetchly-footer__bottom {
    text-align: left;
  }

  .fetchly-footer__col,
  .fetchly-footer__subscribe {
    width: 100%;
  }

  .fetchly-footer__links {
    gap: 14px;
  }

  .fetchly-footer__social {
    margin-top: 14px;
    justify-content: flex-start;
  }

  .fetchly-footer__icon {
    width: 28px;
    height: 28px;
    border: none;
    border-radius: 0;
    opacity: 1;
  }

  .fetchly-footer__divider {
    margin: 26px 0 26px;
  }

  .fetchly-footer__subscribe {
    padding-top: 26px;
    border-top: 1px solid rgba(57,18,18,.25);
  }

  .fetchly-footer__form-row {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 14px;
    align-items: center;
    margin-top: 10px;
  }

  .fetchly-footer__input {
    height: 40px;
    border-radius: 6px;
    background: rgba(0,0,0,.06);
    border: 1px solid rgba(57,18,18,.10);
  }

  .fetchly-footer__button {
    height: 40px;
    padding: 0 18px;
  }

  .fetchly-footer__legal {
    display: grid;
    gap: 18px;
    justify-content: flex-start;
    padding-top: 26px;
    border-top: 1px solid rgba(57,18,18,.25);
    margin-top: 26px;
  }

  .fetchly-footer__bottom {
    flex-direction: column;
    align-items: flex-start;
    gap: 18px;
    margin-top: 22px;
  }
}

</style>

{% schema %}
{
  "name": "Fetchly Footer",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },

    { "type": "text", "id": "menu_1_title", "label": "Menu 1 title", "default": "Shop by Category" },
    { "type": "link_list", "id": "menu_1", "label": "Menu 1" },

    { "type": "text", "id": "menu_2_title", "label": "Menu 2 title", "default": "Shop by Brand" },
    { "type": "link_list", "id": "menu_2", "label": "Menu 2" },

    { "type": "text", "id": "menu_3_title", "label": "Menu 3 title", "default": "About Avora" },
    { "type": "link_list", "id": "menu_3", "label": "Menu 3" },

    { "type": "text", "id": "subscribe_title", "label": "Subscribe title", "default": "Subscribe" },
    { "type": "text", "id": "subscribe_text", "label": "Subscribe text", "default": "Join our newsletter to stay up to date on features <br> and releases." },
    { "type": "text", "id": "email_placeholder", "label": "Email placeholder", "default": "Email" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Subscribe" },
    { "type": "text", "id": "disclaimer", "label": "Disclaimer", "default": "By subscribing you agree to with our Privacy Policy and provide consent to receive updates from our company." },

    { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
    { "type": "url", "id": "email_url", "label": "Email link (mailto:...)" },

    { "type": "text", "id": "copyright_text", "label": "Copyright text", "default": "Â© 2024 Relume. All rights reserved." },
    { "type": "link_list", "id": "legal_menu", "label": "Legal menu" }
  ],
  "presets": [{ "name": "Fetchly Footer" }]
}
{% endschema %}
