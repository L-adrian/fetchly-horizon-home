<section class="fetchly-lookbook">
  <div class="fetchly-lookbook__grid">
    {% for block in section.blocks %}
      <div class="fetchly-lookbook__item fetchly-lookbook__item--{{ forloop.index }}" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt=""
            loading="lazy"
            class="fetchly-lookbook__img"
          >
        {% else %}
          <div class="fetchly-lookbook__placeholder"></div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.fetchly-lookbook{
  background:#f6f0ea;
}

.fetchly-lookbook__grid{
  display:grid;
  grid-template-columns:repeat(4, 1fr);
  gap:0;
}

.fetchly-lookbook__item{
  position:relative;
  overflow:hidden;
  aspect-ratio: 3 / 4;
}

.fetchly-lookbook__img,
.fetchly-lookbook__placeholder{
  position:absolute;
  inset:0;
  width:100%;
  height:100%;
}

.fetchly-lookbook__img{
  object-fit:cover;
  display:block;
  transition:transform .4s ease;
}

.fetchly-lookbook__item:hover .fetchly-lookbook__img{
  transform:scale(1.05);
}

.fetchly-lookbook__placeholder{
  width:100%;
  height:100%;
  background:rgba(0,0,0,.06);
}

@media (max-width: 900px){
 .fetchly-lookbook{
  background:#f6f0ea;
  width: 100%;
  max-width: 100%;
  overflow: hidden; /* evita scroll horizontal si alguna imagen se pasa */
}

.fetchly-lookbook__grid{
  display:grid;
  grid-template-columns:repeat(2, minmax(0, 1fr)); /* 2 por fila siempre */
  gap:0;
  width: 100%;
  max-width: 100%;
}

.fetchly-lookbook__item{
  position:relative;
  overflow:hidden;
  aspect-ratio: 3 / 4; /* todas iguales */
}

.fetchly-lookbook__img,
.fetchly-lookbook__placeholder{
  position:absolute;
  inset:0;
  width:100%;
  height:100%;
}

.fetchly-lookbook__img{
  object-fit:cover;
  display:block;
  max-width: 100%;
  transition:transform .4s ease;
}

.fetchly-lookbook__item:hover .fetchly-lookbook__img{
  transform:scale(1.05);
}

.fetchly-lookbook__placeholder{
  background:rgba(0,0,0,.06);
}

}


</style>

{% schema %}
{
  "name": "Fetchly Lookbook",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Fetchly Lookbook",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
