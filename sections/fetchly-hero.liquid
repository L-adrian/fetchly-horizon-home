<section class="fetchly-hero">
  <div class="fetchly-hero__bg">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | image_url: width: 2000 }}"
        alt="{{ section.settings.background_image.alt | escape }}"
        loading="eager"
        class="fetchly-hero__image"
      >
    {% endif %}
  </div>

  <div class="fetchly-hero__overlay"></div>

  <div class="fetchly-hero__content">
    {% if section.settings.eyebrow != blank %}
      <p class="fetchly-hero__eyebrow">
        {{ section.settings.eyebrow }}
      </p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="fetchly-hero__heading">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.text != blank %}
      <p class="fetchly-hero__text">
        {{ section.settings.text }}
      </p>
    {% endif %}

    {% if section.settings.button_label != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="fetchly-hero__button"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.fetchly-hero {
  position: relative;
  width: 100%;
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.fetchly-hero__bg {
  position: absolute;
  inset: 0;
}

.fetchly-hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.fetchly-hero__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.35);
}

.fetchly-hero__content {
  position: relative;
  z-index: 2;
  text-align: center;
  max-width: 700px;
  padding: 20px;
  color: #fff;
}

.fetchly-hero__eyebrow {
  font-size: 12px;
  letter-spacing: 2px;
  margin-bottom: 10px;
}

.fetchly-hero__heading {
  font-size: 48px;
  line-height: 1.1;
  margin-bottom: 15px;
}

.fetchly-hero__text {
  font-size: 16px;
  margin-bottom: 25px;
}

.fetchly-hero__button {
  display: inline-block;
  padding: 12px 26px;
  border: 1px solid #fff;
  border-radius: 30px;
  color: #fff;
  text-decoration: none;
  transition: all .2s ease;
}

.fetchly-hero__button:hover {
  background: #fff;
  color: #000;
}

@media (max-width: 768px) {
  .fetchly-hero__heading {
    font-size: 30px;
  }
}
</style>

{% schema %}
{
  "name": "Fetchly Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Small title",
      "default": "UNCOMPROMISING"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pieces built for those who lead"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Fashion that demands attention and refuses to fade."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Fetchly Hero"
    }
  ]
}
{% endschema %}
