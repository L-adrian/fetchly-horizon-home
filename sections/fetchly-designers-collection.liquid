  left:-10px; top:-332px;
}

.fetchly-designers__float--2{
  width:292px; height:340px;
  right:121px; top:-198px;
}

.fetchly-designers__float--3{
  width:270px; height:310px;
  right:-40px; top:85px;
  z-index:0;
}

.fetchly-designers__float--4{
width:240px; height:279px;
  right:-10px; bottom:-320px;
}

.fetchly-designers__float--5{
  width:240px; height:279px;
  left:165px; top:240px;z-index:2;
}

.fetchly-designers__float--6{
  width:270px; height:314px;
  left:60px; top:488px;
}

@media (max-width: 900px){
.fetchly-designers{
 height:812px;
  padding:0px 0;
  overflow:hidden;
}
  .fetchly-designers__wrap{
    padding:0 22px;
    min-height:980px;
  }

  .fetchly-designers__float{
    width:150px;
    height:180px;
    left:50%;
    transform:translateX(-50%);
    border-radius:14px;
    overflow:hidden;
  }

  .fetchly-designers__float img{
    width:100%;
    height:100%;
    object-fit:cover;
  }

  .fetchly-designers__float--1{top: -20px;left: 122px;}
  .fetchly-designers__float--2{ top: 170px;transform:translateX(calc(-50% + 100px));}
  .fetchly-designers__float--3{ top: 294px;transform:translateX(calc(-50% + 120px));}
  .fetchly-designers__float--4{ top: 645px;transform:translateX(calc(-50% + 140px));}
  .fetchly-designers__float--5{ top: 450px;transform: translateX(calc(-50% - 185px));}
  .fetchly-designers__float--6{ top: 560px;transform: translateX(calc(-50% - 146px));}

  .fetchly-designers__card{
        position: absolute;
        top: -150px;
        left: auto;
        transform: none;
        width: 100%;
        max-width: 640px;
        margin: 420px auto 0;
        padding: 34px 22px 28px;
        border-radius: 20px;
  }
}

</style>

