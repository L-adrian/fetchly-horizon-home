<section class="fetchly-designers">
  <div class="fetchly-designers__wrap">

    <div class="fetchly-designers__float fetchly-designers__float--1">
      {% if section.settings.img_1 %}
        <img src="{{ section.settings.img_1 | image_url: width: 900 }}" alt="" loading="lazy">
      {% endif %}
    </div>

    <div class="fetchly-designers__float fetchly-designers__float--2">
      {% if section.settings.img_2 %}
        <img src="{{ section.settings.img_2 | image_url: width: 900 }}" alt="" loading="lazy">
      {% endif %}
    </div>

    <div class="fetchly-designers__float fetchly-designers__float--3">
      {% if section.settings.img_3 %}
        <img src="{{ section.settings.img_3 | image_url: width: 900 }}" alt="" loading="lazy">
      {% endif %}
    </div>

    <div class="fetchly-designers__float fetchly-designers__float--4">
      {% if section.settings.img_4 %}
        <img src="{{ section.settings.img_4 | image_url: width: 900 }}" alt="" loading="lazy">
      {% endif %}
    </div>

    <div class="fetchly-designers__float fetchly-designers__float--5">
      {% if section.settings.img_5 %}
        <img src="{{ section.settings.img_5 | image_url: width: 900 }}" alt="" loading="lazy">
      {% endif %}
    </div>

    <div class="fetchly-designers__float fetchly-designers__float--6">
      {% if section.settings.img_6 %}
        <img src="{{ section.settings.img_6 | image_url: width: 900 }}" alt="" loading="lazy">
      {% endif %}
    </div>

    <div class="fetchly-designers__card">
      {% if section.settings.title != blank %}
        <h2 class="fetchly-designers__title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="fetchly-designers__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      <div class="fetchly-designers__actions">
        {% if section.settings.primary_text != blank and section.settings.primary_link != blank %}
          <a class="fetchly-designers__btn fetchly-designers__btn--primary" href="{{ section.settings.primary_link }}">
            {{ section.settings.primary_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_text != blank and section.settings.secondary_link != blank %}
          <a class="fetchly-designers__btn fetchly-designers__btn--secondary" href="{{ section.settings.secondary_link }}">
            {{ section.settings.secondary_text }}
          </a>
        {% endif %}
      </div>
    </div>

  </div>
</section>

<style>
.fetchly-designers{
  background:#f6f0ea;
  padding:190px 0;
  overflow:hidden;
}

.fetchly-designers__wrap{
  position:relative;
  max-width:1200px;
  margin:0 auto;
  padding:0 34px;
  min-height:520px;
}

.fetchly-designers__card{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%, -50%);
  z-index:2;

  width:min(760px, 100%);
  background:rgba(255,255,255,.55);
  border:1px solid rgba(58,11,11,.10);
  border-radius:22px;
  padding:54px 54px 46px;
  text-align:center;
  backdrop-filter: blur(1px);
}

.fetchly-designers__title{
  margin:0 0 16px;
  font-size:66px;
  line-height:1.02;
  color:#3a0b0b;
  font-weight:600;
  letter-spacing:-0.02em;
}

.fetchly-designers__subtitle{
  margin:0 auto 26px;
  max-width:520px;
  font-size:16px;
  line-height:1.6;
  color:#3a0b0b;
  opacity:.9;
}

.fetchly-designers__actions{
  display:flex;
  justify-content:center;
  gap:16px;
  flex-wrap:wrap;
}

.fetchly-designers__btn{
  display:inline-flex;
  align-items:center;
  justify-content:center;
  padding:12px 22px;
  border-radius:999px;
  text-decoration:none;
  font-size:14px;
  border:1px solid rgba(58,11,11,.45);
}

.fetchly-designers__btn--primary{
  background:#3a0b0b;
  color:#f6f0ea;
  border-color:#3a0b0b;
}

.fetchly-designers__btn--primary:hover{
  opacity:.92;
}

.fetchly-designers__btn--secondary{
  background:transparent;
  color:#3a0b0b;
}

.fetchly-designers__btn--secondary:hover{
  background:rgba(58,11,11,.06);
}

.fetchly-designers__float{
  position:absolute;
  z-index:1;
  border-radius:16px;
  overflow:hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,.10);
}

.fetchly-designers__float img{
  width:100%;
  height:100%;
  display:block;
  object-fit:cover;
}

.fetchly-designers__float--1{
